<h1>Users</h1>

<% @users.each do |user| %>
  <div>
    <%= link_to gravatar_for(user, size: 200), user %>
    <p><%= link_to user.username, user_path(user) %></p>
    <small>Joined <%=  time_ago_in_words(user.created_at) %> ago </small>
    <p><%= link_to pluralize(user.articles.count, "article") %></p>
  </div>
<% end %>